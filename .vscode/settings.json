{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/.turbo": true,
		"**/dist": true,
		"**/.next": true,
		"**/.pnpm-debug.log": true
	},
	// 让 Tailwind 插件识别 Shadcn 的 cn() 函数
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
	],
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
